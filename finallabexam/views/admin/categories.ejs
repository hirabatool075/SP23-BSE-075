<% layout('adminlayout') %>

<style>
  h3 {
    text-align: center;
    color: #c62828; /* Red heading */
    font-size: 2rem;
    margin-top: 20px;
  }

  a.btn-danger {
    background-color: #c62828; /* Custom red */
    color: #ffffff;
    border-radius: 6px;
    text-decoration: none;
    padding: 8px 15px;
    font-size: 1rem;
    transition: background-color 0.3s ease;
  }

  a.btn-danger:hover {
    background-color: #b71c1c;
  }

  table {
    width: 100%;
    margin: 0 auto;
    border-collapse: collapse;
    background-color: #ffffff;
    border: 2px solid #c62828; /* Red border */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  thead {
    background-color: #c62828; /* Red header */
    color: #ffffff;
  }

  th, td {
    text-align: center;
    padding: 12px;
    border: 1px solid #e0e0e0;
  }

  tbody tr:nth-child(even) {
    background-color: #fffdf6; /* Cream row striping */
  }

  tbody tr:hover {
    background-color: #fde6e6; /* Light red hover */
  }

  a.btn-warning, a.btn-danger {
    display: inline-block;
    margin: 0 5px;
    padding: 8px 12px;
    border-radius: 6px;
    color: #ffffff;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  a.btn-warning {
    background-color: #ffb300; /* Amber color for Edit */
  }

  a.btn-warning:hover {
    background-color: #ffa000;
  }
</style>

<h3 class="mb-4"><%- pageTitle %></h3>

<!-- Create New Category Button -->
<div class="text-center mb-4">
  <a href="/admin/categories/create" class="btn btn-danger">Create New Category</a>
</div>

<!-- Categories Table -->
<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (categories.length > 0) { %>
      <% categories.forEach(category => { %>
        <tr>
          <td><%= category._id %></td>
          <td><%= category.title %></td>
          <td><%= category.description %></td>
          <td>
            <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/admin/categories/delete/<%= category._id %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="4" class="text-center">No categories found</td>
      </tr>
    <% } %>
  </tbody>
</table>
